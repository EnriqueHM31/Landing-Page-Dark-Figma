---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Error 404">
	<section class="flex items-center justify-center gap-4 bg-black w-full h-full relative">
		<div class="absolute left-0 top-0">
			<img src="/src/assets/404/Figura1.png" alt="Figura 1" />
		</div>

		<div class="absolute right-0 top-0">
			<img src="/src/assets/404/Figura2.png" alt="Figura 2" />
		</div>

		<div class="absolute bottom-1/5 left-1/6">
			<img src="/src/assets/404/Figura3.png" alt="Figura 3" />
		</div>

		<div class="absolute bottom-1/6 right-1/6">
			<img src="/src/assets/404/Figura4.png" alt="Figura 4" />
		</div>

		<div class="flex flex-col items-center justify-center gap-6 max-w-3xl">
			<h2 class="text-9xl font-bold text-center z-20">404</h2>
			<p class="text-center z-20 text-xl font-semibold">It seems the page you are looking for does not exist or has been moved.</p>

			<div class="flex gap-4 justify-center z-20">
				<a href="/" class="bg-secondary text-white w-fit px-4 py-3 rounded-xl hover:bg-white/15 border border-white/25 transition-colors font-bold">
					Home</a
				>
				<button
					onclick="history.back()"
					class="bg-primary text-white w-fit px-4 py-3 rounded-xl hover:bg-white/15 border border-white/25 transition-colors font-bold"
				>
					Regresar
				</button>
			</div>
		</div>
	</section>
</Layout>
