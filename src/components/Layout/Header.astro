---
import BotonPrimary from '../Layout/BotonPrimary.astro';
const currentPath = Astro.url.pathname;

const LINKS = [
	{ name: 'Home', href: '/' },
	{ name: 'About Us', href: '/about' },
	{ name: 'Properties', href: '/properties' },
	{ name: 'Services', href: '/services' },
];

const claseActive = (href: string) => {
	return currentPath === href ? 'active' : '';
};
---

<div
	class="w-full flex items-center xl:justify-center justify-start bg-[url('../assets/Home/Abstracto.png')] bg-primary text-white p-3 gap-2.5 overflow-hidden xl:order-1 order-2 mt-16 xl:mt-0"
>
	<p class="xl:text-lg text-sm max-w-5/6">
		âœ¨Discover Your Dream Property with Estatein
		<a href="/" class="underline xl:ms-3 ms-1 hover:text-white/60 transition-colors">Learn More</a>
	</p>

	<button
		class="bg-white/25 text-black rounded-full hover:bg-black hover:text-white hover:border transition-colors size-7 p-1 cursor-pointer absolute right-1/12"
	>
		<img src="/src/assets/General/Eliminar.png" alt="Icono para eliminar" />
	</button>
</div>

<nav class="bg-primary fixed xl:static w-full z-20 top-0 start-0">
	<div class="w-full flex flex-wrap items-center justify-between mx-auto p-4 max-w-laptop">
		<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
			<img src="/src/assets/General/Logo.svg" class="h-8" alt="Estatein Logo" />
			<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Estatein</span>
		</a>
		<div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
			<BotonPrimary texto="Contact" href="/" />

			<button
				data-collapse-toggle="navbar-sticky"
				type="button"
				class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 border-white"
				aria-controls="navbar-sticky"
				aria-expanded="false"
				id="menu"
			>
				<span class="sr-only">Open main menu</span>
				<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"></path>
				</svg>
			</button>
		</div>
		<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
			<ul class="flex flex-col p-4 md:p-0 mt-4 font-medium rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0">
				{
					LINKS.map(({ name, href }, i) => (
						<li>
							<BotonPrimary
								texto={name}
								href={href}
								clase={`${claseActive(href)} block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:text-white md:px-4 md:py-2 text-white`}
							/>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</nav>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const menu = document.getElementById('menu');
		const navegacion = document.getElementById('navbar-sticky');

		if (!menu || !navegacion) return;

		menu.addEventListener('click', () => {
			navegacion.classList.toggle('hidden');
			navegacion.classList.toggle('animate-fade-in-down');
		});
	});
</script>
