---
import TituloSeccion from '../Layout/TituloSeccion.astro';
import { ANIMATION_WORK, TEAMWORK } from '../../assets/js/PageInfo.js';
---

<section class="overflow-hidden bg-black">
	<div class="px-4 py-16 mx-auto max-w-7xl sm:px-6 lg:px-8">
		<div data-aos="zoom-in" data-aos-delay="400">
			<TituloSeccion
				title="Meet the Estatein Team"
				content="At Estatein, our success is driven by the dedication and expertise of our team. Get to know the people behind our mission to make your real estate dreams a reality."
			/>
		</div>
		<div class="mt-12 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
			{
				TEAMWORK.map(({ img, name, cargo, twitter }, index) => (
					<div
						data-aos={`${ANIMATION_WORK[index]}`}
						data-aos-delay={index * 200}
						class="col-span-1 flex flex-col rounded-lg shadow-md shadow-white overflow-hidden border border-white/30 p-4 hover:border-secondary hover:shadow-secondary transition-colors focus:border-secondary focus:shadow-secondary"
					>
						<div class="flex-shrink-0">
							<img class="h-full w-full object-cover" src={img} alt={`Avatar de ${name}`} />
						</div>
						<div class="flex-1 p-6 flex flex-col justify-between items-center gap-6">
							<div class="p-4 w-full flex justify-center -mt-14">
								<a href={twitter} target="_blank" rel="noreferrer" class="bg-secondary  rounded-4xl w-16 h-10 flex items-center justify-center">
									<img src="/src/assets/General/IconTwitter.png" alt="Twitter" />
								</a>
							</div>
							<div class="flex-1 flex flex-col items-center ">
								<p class="text-2xl font-bold">{name}</p>
								<p class="mt-3 text-white/50 text-sm ">{cargo}</p>
							</div>
							<div>
								<form name="envio" class="relative">
									<label for={`mensaje_${name}`}>
										<input
											type="text"
											value="Say Hello ðŸ‘‹"
											id={`mensaje_${name}`}
											name="mensaje"
											class="border border-white/30 px-1 py-4 rounded-4xl ps-6 flex items-center"
										/>
										<div class="absolute  size-10 rounded-full bg-secondary flex items-center justify-center right-1/12 top-1/6 ">
											<img src="/src/assets/Home/IconEnviar.png" alt="Enviar" />
										</div>
									</label>
								</form>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
