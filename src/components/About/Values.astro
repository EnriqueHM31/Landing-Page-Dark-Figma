---
import TituloSeccion from '../Layout/TituloSeccion.astro';
import { VALUES } from '../../assets/js/PageInfo.js';
import { borderValuesPage } from '../../assets/js/PageInfo.js';
---

<section class="flex flex-col gap-3 w-full bg-black xl:py-16 py-0 overflow-hidden">
	<div class="p-4 flex flex-col xl:flex-row gap-5 xl:gap-8 w-full xl:w-laptop xl:m-auto m-0 xl:items-center">
		<div class="xl:flex-1 flex-none" data-aos="zoom-out" data-aos-delay="100">
			<TituloSeccion
				title="Our Values"
				content="We are committed to providing you with the highest level of service, professionalism, and trust. Our values guide our decisions and actions, ensuring that we deliver exceptional results."
			/>
		</div>

		<div
			class="flex xl:flex-2 w-full flex-col px-4 py-2 border border-white/50 rounded-2xl shadow-md shadow-white xl:grid xl:grid-cols-2 gap-4 xl:gap-8 xl:py-6"
		>
			{
				VALUES.map(({ title, icon, texto }, i) => (
					<article
						class={`p-4 flex flex-col gap-4 ${borderValuesPage(i, VALUES.length)} xl:border-none`}
						data-aos="zoom-out"
						data-aos-delay={`${i * 100 + 100}`}
					>
						<div class="flex gap-5 items-center">
							<div class="size-12 rounded-full border border-secondary p-3">
								<img class="w-full h-auto object-contain" src={icon} alt={`Icono de ${title}`} />
							</div>
							<h3 class="text-xl font-semibold">{title}</h3>
						</div>
						<div>
							<p class="text-white/50">{texto}</p>
						</div>
					</article>
				))
			}
		</div>
	</div>
</section>
