---
import TituloSeccion from '../Layout/TituloSeccion.astro';
import { LOGROS } from '../../assets/js/PageInfo.js';
import { ANIMACION_LOGROS_CARD as ANIMACION } from '../../assets/js/PageInfo.js';
---

<section class="bg-black xl:py-16 py-0 overflow-hidden">
	<div class="p-4 flex flex-col gap-5 xl:gap-12 w-full xl:w-laptop xl:m-auto m-0 xl:items-center">
		<div data-aos="fade-down" data-aos-delay="100">
			<TituloSeccion
				title="Our Achievements"
				content="Our story is one of continuous growth and evolution. We started as a small team with big dreams, determined to create a real estate platform that transcended the ordinary."
			/>
		</div>

		<div class="flex flex-col xl:flex-row gap-8">
			{
				LOGROS.map(({ title, content }, i) => (
					<article
						data-aos={ANIMACION[i]}
						data-aos-delay={`${i * 100 + 100}`}
						class="flex flex-col gap-3 w-full border border-white/50 rounded-2xl shadow shadow-white/20 px-4 py-7 justify-center "
					>
						<h2 class="text-xl font-bold">{title}</h2>
						<p class="text-white/50">{content}</p>
					</article>
				))
			}
		</div>
	</div>
</section>
