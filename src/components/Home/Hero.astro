---
import CardEstadisticas from '../Layout/CardEstadisticas.astro';
import BotonPrimary from '../Layout/BotonPrimary.astro';
import BotonSecondary from '../Layout/BotonSecondary.astro';
import { ESTADISTICAS } from '../../assets/js/PageInfo.js';
---

<section class="flex xl:flex-row flex-col w-full bg-black relative overflow-hidden">
	<img
		src="/src/assets/Home/Logo_diseÃ±o.svg"
		alt="Logo de Estatein"
		class="xl:size-28 size-16 absolute xl:top-1/4 xl:left-1/2 md:left-1/5 md:top-3/6 md:mt-7 top-1/12 left-11/12 mt-0 -translate-x-5/6 -translate-y-3/4 xl:-translate-x-1/2 xl:-translate-y-1/2 animate-fade-in-down animate-delay-100 animate-duration-400 z-10"
	/>
	<div
		class="xl:w-1/2 w-full flex flex-col justify-center gap-6 order-2 xl:order-1 xl:py-0 py-16 xl:px-16 px-4 animate-fade-in-right animate-delay-200 animate-duration-600"
	>
		<h2 class="xl:text-5xl text-4xl xl:max-w-3/4 w-full font-semibold">Discover Your Dream Property with Estatein</h2>
		<p class="text-white/50">
			Your journey to finding the perfect property begins here. Explore our listings to find the home that matches your dreams.
		</p>
		<div class="flex xl:flex-row flex-col gap-3 items-center my-5">
			<BotonPrimary texto="Learn More" href="/" class="flex-1" />
			<BotonSecondary texto="Browse Properties" href="/" />
		</div>

		<div class="grid grid-cols-2 gap-2 xl:flex xl:flex-wrap xl:gap-3 w-full">
			{ESTADISTICAS.map(({ numero, title }, i) => <CardEstadisticas numero={numero} title={title} i={i} />)}
		</div>
	</div>

	<div
		class="xl:w-1/2 w-full h-full bg-primary flex justify-center order-1 xl:order-2 animate-fade-in-left animate-delay-300 animate-duration-800 z-0"
	>
		<img class="w-full object-cover aspect-square" src="/src/assets/Home/Contenedor.png" alt="Imagen alusiva a la empresa" />
	</div>
</section>
