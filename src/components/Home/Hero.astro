---
import BotonPrimary from "./BotonPrimary.astro"
import BotonSecondary from "./BotonSecondary.astro"


const ESTADISTICAS = [
    {numero: '200+', title: 'Happy Customers'},
    {numero: '10k+', title: 'Properties For Clients'},
    {numero: '16+', title: 'Years for Experience'},
]
---


<section class="flex w-full bg-black relative">

    <img src="/src/assets/Home/Logo_diseÃ±o.svg" alt="Logo de Estatein" class="size-28 absolute top-1/4 left-1/2 trransform -translate-x-1/2 -translate-y-1/2">
    <div class="w-1/2 flex flex-col justify-center gap-6 px-16">

        <h2 class="text-5xl max-w-3/4 font-semibold">Discover Your Dream Property with Estatein</h2>
        <p class="text-white/50">Your journey to finding the perfect property begins here. Explore our listings to find the home that matches your dreams.</p>
        <div class="flex gap-3 items-center my-5">
            <BotonPrimary texto="Learn More" href="/" />
            <BotonSecondary texto="Browse Properties" href="/" />
        </div>

        <div class="flex gap-2">
            {
                ESTADISTICAS.map(({ numero, title }) => (
                    <div class="flex-1 flex flex-col gap-3 bg-primary px-3 py-4 mt-7 rounded-2xl">
                        <p class="text-3xl font-bold">{numero}</p>
                        <p class="text-sm text-white/50">{title}</p>
                    </div>
                ))
            }
        </div>
    </div>

    <div class="w-1/2 h-full bg-primary flex justify-center">
        <img class="w-full object-cover" src="/src/assets/Home/Contenedor.png" alt="Imagen alusiva a la empresa">
    </div>
</section>